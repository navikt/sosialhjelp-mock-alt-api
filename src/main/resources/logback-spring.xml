<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProfile name="log-kibana">

        <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepthPerThrowable>20</maxDepthPerThrowable>
                </throwableConverter>
            </encoder>
        </appender>

        <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.mdc.v1_0.OpenTelemetryAppender">
            <appender-ref ref="STDOUT" />
        </appender>

        <root level="INFO">
            <appender-ref ref="OTEL" />
        </root>

        <logger name="org.springframework" level="warn"/>

        <root level="INFO">
            <appender-ref ref="stdout_json"/>
        </root>
    </springProfile>

    <springProfile name="log-console">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%green(%d{HH:mm:ss}) %cyan([%-5.5t]) %boldCyan(%0.-5p) %yellow(%-20.20logger{19}) %cyan(:) %m%n
                </pattern>
            </encoder>
        </appender>

        <logger name="org.springframework" level="warn"/>
        <logger name="org.springframework.jdbc" level="info" />
        <logger name="org.flywaydb" level="debug" />
        <logger name="no.nav.sosialhjelp.soknad" level="debug"/>
        <logger name="org.apache.pdfbox" level="error"/>
        <logger name="no.nav.security.token.support" level="info"/>
        <logger name="klientlogger" level="debug"/>

        <root level="INFO">
            <appender-ref ref="console"/>
        </root>
    </springProfile>

</configuration>

